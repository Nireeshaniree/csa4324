<title>Bus Ticket Reservation</title>
</head>
<body>
  <h1>Bus Ticket Reservation System</h1>
  <form id="reservationForm">
    <label for="busSelect">Select Bus:</label>
    <select id="busSelect" name="busSelect">
      <option value="bus1">Bus 1</option>
      <option value="bus2">Bus 2</option>
      <option value="bus3">Bus 3</option>
    </select><br><br>

    <label for="numSeats">Number of Seats:</label>
    <input type="number" id="numSeats" name="numSeats" min="1" max="10"><br><br>

    <button type="button" onclick="reserveSeat()">Reserve Seat(s)</button>
  </form>

  <script>
    function reserveSeat() {
      // Get selected bus and number of seats
      const selectedBus = document.getElementById("busSelect").value;
      const numSeats = parseInt(document.getElementById("numSeats").value);

      // Validate input
      if (numSeats <= 0) {
        alert("Please enter a valid number of seats.");
        return;
      }

      // Perform reservation (you would handle this via AJAX to a backend in a real system)
      alert(Reserved ${numSeats} seat(s) on ${selectedBus}.);

      // Reset form
      document.getElementById("reservationForm").reset();
    }
  </script>
</body>
</html>
